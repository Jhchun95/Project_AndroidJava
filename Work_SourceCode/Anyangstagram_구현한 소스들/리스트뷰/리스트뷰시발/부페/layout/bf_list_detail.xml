<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivbf01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cf_BFqooqoo1"/>
    <TextView
        android:id="@+id/tvbfa01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ivbf01"
        android:text="쿠우쿠우 범계점"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <TextView
        android:id="@+id/tvbfa02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvbfa01"
        android:text="경기 안양시 동안구 평촌대로223번길 52"
        android:textColor="#000000" />
    <Button
        android:id="@+id/detailBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvbfa02"
        android:layout_alignParentRight="true"
        android:text="상세 정보"
        android:textSize="20dp"
        android:background="#ceeceb"/>

</RelativeLayout>